@section Scripts{
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
    <script>

        $(function () {
            /*
             * Select products from specified category
             */

            $("#categoryIdList").change(function (event) {
                $("#hidPageSize").val($("#pageSizeList").val());
                var form = $(event.target).parents("form");
                form.submit();
            });


            /////////////////////////////////////////////////////////////

            /*
             * Select page size
             */

            $("#pageSizeList").change(function (event) {
                $("#hidcategoryId").val($("#categoryIdList").val());
                var form = $(event.target).parents("form");
                form.submit();
            });


            /////////////////////////////////////////////////////////////

            /*
             * Confirm product deletion
             */
            $("a.delete").click(function () {
                if (!confirm("Confirm product deletion")) return false;
            });

            /////////////////////////////////////////////////////////////

        });
    </script>
