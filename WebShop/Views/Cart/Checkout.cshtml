@model WebShop.Models.ViewModels.Account.UserProfileVM

@{
    ViewBag.Title = "Checkout";

    var htmlAttributes = new Dictionary<string, object>
    {
        { "class", "input"}
    };
    if (ViewBag.IsAuthenticated == "true")
    {
        htmlAttributes.Add("disabled", "disabled");
    }
}

<!-- BREADCRUMB -->
<div id="breadcrumb" class="section">
    <!-- CONTAINER -->
    <div class="container">
        <!-- ROW -->
        <div class="row">
            <div class="col-md-12">
                <h3 class="breadcrumb-header">Checkout</h3>
            </div>
        </div>
        <!-- /ROW -->
    </div>
    <!-- /CONTAINER -->
</div>
<!-- /BREADCRUMB -->
<!-- SECTION -->
<div class="section">
    <!-- CONTAINER -->
    <div class="container">
        @if (TempData["Checkout"] != null)
        {
            <!-- ROW -->
            <div class="row checkout-complete">
                <div class="col-md-3">
                </div>
                <div class="col-md-6">
                    <div class="cart-checkout">
                        <img src="~/Content/img/tick.svg" alt="">
                    </div>
                    <div class="cart-checkout">
                        <h2 class="text-center">Thank you for purchasing</h2>
                    </div>
                    <div class="cart-checkout">
                        <h5 class="alert alert-success text-center">@TempData["Checkout"]</h5>
                    </div>
                    <div class="cart-checkout">
                        @*@Html.ActionLink("Continue Shopping", "Index", "Shop", new { area = "" }, new { @class= "btn checkout back-checkout" })*@
                        <a href="/Shop/Index" class="btn"><i class="fa fa-arrow-circle-left"></i> Continue Shopping</a>
                    </div>
                </div>
                <div class="col-md-3">
                </div>
            </div>
        }
        else
        {
            <!-- ROW -->
            <div class="row">
                <div class="col-md-7">
                    <!-- BILLING DETAILS -->
                    <div class="billing-details">
                        <div class="section-title">
                            <h3 class="title">Billing address</h3>
                        </div>
                        @using (Html.BeginForm())
                        {
                            @ViewBag.IsAuthenticated
                            <div class="form-group">
                                <label class="control-label col-md-2">First name</label>
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = htmlAttributes })
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Last name</label>
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = htmlAttributes })
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">E-mail</label>
                                @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = htmlAttributes })
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Address</label>
                                @Html.EditorFor(model => model.StreetAddress, new { htmlAttributes = htmlAttributes })
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">City</label>
                                @Html.EditorFor(model => model.City, new { htmlAttributes = htmlAttributes })
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Zip code</label>
                                @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = htmlAttributes })
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-2">Contact</label>
                                @Html.EditorFor(model => model.Contact, new { htmlAttributes = htmlAttributes })
                            </div>
                        }
                    </div>
                    <div class="form-group">
                        <a class="edit btn btn-default" href="/account/user-profile">
                            Edit profile
                        </a>
                    </div>
                    <!-- /BILLING DETAILS-->
                </div>

                <!-- ORDER DETAILS-->
                <div class="col-md-5 order-details">
                    <div class="section-title text-center">
                        <h3 class="title">Your Order</h3>
                    </div>

                    <div class="order-summary">
                        <div class="order-col">
                            <div><strong>PRODUCT</strong></div>
                            <div><strong>SUBTOTAL</strong></div>
                        </div>
                        @if (ViewBag.CartVMList != null && ViewBag.CartVMList.Count > 0)
                        {
                            <div class="order-products">
                                @foreach (var product in ViewBag.CartVMList)
                                {
                                    <div class="order-col">
                                        <div>@product.ProductName</div>
                                        <div>@product.Quantity x  $@product.Price</div>
                                    </div>
                                }
                            </div>
                        }
                        <div class="order-col">
                            <div>Shipping</div>
                            <div><strong>FREE</strong></div>
                        </div>
                        <div class="order-col">
                            <div><strong>TOTAL</strong></div>
                            <div><strong class="order-total">$@ViewBag.GrandTotal</strong></div>
                        </div>
                    </div>
                    <div class="payment-method">
                        <div class="input-radio">
                            <input type="radio" name="payment" id="payment-1" checked>
                            <label for="payment-1">
                                <span></span>
                                Cash on Delivery
                            </label>
                            <div class="caption">
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                            </div>
                        </div>
                        <div class="input-radio">
                            <input type="radio" name="payment" id="payment-2">
                            <label for="payment-2">
                                <span></span>
                                Paypal System
                            </label>
                            <div class="caption">
                                <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labet dolore magna aliqua.</p>
                            </div>
                        </div>
                    </div>
                    <div class="input-checkbox">
                        <input type="checkbox" id="terms">
                        <label for="terms">
                            <span></span>
                            I've read and accept the <a href="#">terms & conditions</a>
                        </label>
                    </div>
                    <a href="#" class="placeorder primary-btn order-submit">Place order</a>
                </div>
                <!-- /ORDER DETAILS-->
            </div>
            <!-- /ROW -->
            <div class="ajaxbg"><span><img src="~/Content/img/ajax-loader.gif" /></span></div>
            @Html.Action("PaypalPartial", "Cart")
        }
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->

@section scripts{
    <script>

        $(function () {

            /*
            * Place order
            */

            $("a.placeorder").click(function (e) {
                e.preventDefault();
                //var $this = $(this);
                 var url = "@Url.Action("PlaceOrder", "cart")?paymentMethod=";

                if (document.getElementById('payment-1').checked) {
                    var paymentMethod = "cash";
                    $.post(url + paymentMethod, {}, function (data) {
                    }).done(function () {
                        location.reload();
                    });
                }
                if (document.getElementById('payment-2').checked) {
                    var paymentMethod = "paypal";
                    $(".ajaxbg").show();
                    $.post(url + paymentMethod, {}, function (data) {
                        $(".ajaxbg span").text("Thank you. You will now be redirected to paypal.");
                        setTimeout(function () {
                            $('form input[name="paypalSubmit"]').click();
                        }, 2000);
                    });
                }
            });

            //////////////////////////////////////////////////////////////

        });
    </script>
}
