@model WebShop.Models.ViewModels.Account.UserProfileVM

@{
    ViewBag.Title = "Profile Details";
}

<!-- SECTION -->
<div class="section min-height">
    <!-- CONTAINER -->
    <div class="container">
        <!-- ROW -->
        <div class="row">
            <!-- ASIDE -->
            <div id="aside" class="col-md-2 col-xs-3">
                <div class="aside">
                    <h3 class="aside-title text-uppercase">My Profile</h3>
                    <ul class="user-nav nav navbar-nav">
                        <li class="active"><a href="/account/user-profile">Profile details</a></li>
                        <li><a href="/account/Orders">Orders</a>
                    </ul>
                </div>
            </div>
            <!-- /ASIDE -->
            <div id="store" class="col-md-8 col-xs-8">
                <h3 class="page-header text-uppercase">@ViewBag.Title</h3>

                @if (TempData["SM"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SM"]
                    </div>
                }

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)
                    <div class="row" id="form-horizontal">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName">First name</label>
                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="lastName">Last name</label>
                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                <label for="username">Username</label>
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", placeholder = "Username" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6 mb-3">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <label for="email">E-mail</label>
                                @Html.EditorFor(model => model.EmailAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "you@example.com" } })
                                @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <span class="input-group-text"><i class="fas fa-home"></i></span>
                                <label for="address">Address</label>
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6 mb-3">
                                <span class="input-group-text"><i class="fas fa-building"></i></span>
                                <label for="city">City</label>
                                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <span class="input-group-text"><i class="fas fa-envelope-open"></i></span>
                                <label for="zip-code">Zip code</label>
                                @Html.EditorFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ZipCode, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6 mb-3">
                                <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                <label for="contact">Contact</label>
                                @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Contact, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <span class="input-group-text"><i class="fas fa-unlock-alt"></i></span>
                                <label for="password">New password</label>
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "********" })
                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6 mb-3">
                                <span class="input-group-text"><i class="fas fa-unlock-alt"></i></span>
                                <label for="confirm-password">Confirm password</label>
                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", placeholder = "********" })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="mb-3">
                            <input type="submit" value="Edit profile" class="edit btn" />
                        </div>
                    </div>
                }
            </div>
            <div class="col-md-2 col-xs-1"></div>
        </div>
        <!-- /ROW -->
    </div>
    <!-- /CONTAINER -->
</div>
<!-- /SECTION -->